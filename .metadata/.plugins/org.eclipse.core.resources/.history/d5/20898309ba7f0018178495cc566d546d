//    	 System.out.println(((Employee) employeeList).getPlace());
//     //Do whatever you want here
//     }
//     }
    
    Employee jim = new Employee(s);
    System.out.println(jim);
    int index = Collections.binarySearch(employeeList, jim);
    if (index >= 0) {
        jim = employeeList.get(index-1);
        System.out.println("Found employee: " + jim);
    }
     
	
}
}
